<Window x:Class="HospitalManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Modern Hospital Manager" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen" Background="#F5F6FA"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#EBF1FE"/>
                                <Setter Property="Foreground" Value="#5D87FF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SoftCard" TargetType="materialDesign:Card">
            <Setter Property="UniformCornerRadius" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="1" Opacity="0.05" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Margin="0,0,15,0" CornerRadius="0,25,25,0">
            <StackPanel Margin="25">
                <StackPanel Orientation="Horizontal" Margin="0,10,0,50">
                    <materialDesign:PackIcon Kind="HospitalBuilding" Width="35" Height="35" Foreground="#FA5A7D"/>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Hospital" FontSize="18" FontWeight="Bold" Foreground="#2D3436"/>
                        <TextBlock Text="Manager Pro" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>

                <RadioButton Style="{StaticResource MenuButtonStyle}" IsChecked="True" Tag="0" Click="Menu_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountPlus" Width="22" Height="22" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Lễ Tân &amp; Tiếp Đón" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource MenuButtonStyle}" Tag="1" Click="Menu_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Stethoscope" Width="22" Height="22" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Phòng Khám Bác Sĩ" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource MenuButtonStyle}" Tag="2" Click="Menu_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Pill" Width="22" Height="22" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Quản Lý Kho Thuốc" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource MenuButtonStyle}" Tag="3" Click="Menu_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CashMultiple" Width="22" Height="22" Margin="0,0,15,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Thu Ngân &amp; Hóa Đơn" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </RadioButton>

                <Border Background="#FFF4DE" CornerRadius="20" Margin="0,80,0,0" Padding="20">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Ambulance" Width="50" Height="50" Foreground="#FFAE1F" HorizontalAlignment="Center"/>
                        <TextBlock Text="Cấp cứu 24/7" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5" Foreground="#FFAE1F"/>
                        <TextBlock Text="Hotline: 115" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="10,25,10,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="10,0,10,25">
                <StackPanel>
                    <TextBlock x:Name="lblPageTitle" Text="LỄ TÂN - ĐĂNG KÝ KHÁM" FontSize="26" FontWeight="Bold" Foreground="#2D3436"/>
                    <TextBlock Text="Hệ thống quản lý bệnh viện thông minh" FontSize="14" Foreground="#B2BEC3" Margin="0,5,0,0"/>
                </StackPanel>

                <Border DockPanel.Dock="Right" Background="White" CornerRadius="15" Padding="10,5" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Magnify" VerticalAlignment="Center" Foreground="Gray"/>
                        <TextBox materialDesign:HintAssist.Hint="Tìm kiếm chung..." Width="150" Margin="10,0,0,0" BorderThickness="0"/>
                    </StackPanel>
                </Border>
            </DockPanel>

            <TabControl Grid.Row="1" x:Name="MainTabControl" BorderThickness="0" Padding="0" Background="{x:Null}" SelectionChanged="MainTabControl_SelectionChanged">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </Style>
                </TabControl.ItemContainerStyle>

                <TabItem>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <materialDesign:Card Style="{StaticResource SoftCard}" Background="#FFE2E5" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Margin="30">
                                    <TextBlock Text="Tiếp đón bệnh nhân mới" FontSize="20" FontWeight="Bold" Foreground="#FA5A7D"/>
                                    <TextBlock Text="Vui lòng nhập đầy đủ thông tin hành chính" Foreground="#757575" Margin="0,5,0,20"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="txtRecName" materialDesign:HintAssist.Hint="Họ và Tên" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,10,0"/>
                                        <TextBox Grid.Column="1" x:Name="txtRecPhone" materialDesign:HintAssist.Hint="Số điện thoại" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,0,0,0"/>
                                    </Grid>

                                    <Button Content="THÊM VÀO HÀNG ĐỢI" Click="BtnReception_Add_Click" 
                                            Background="#FA5A7D" BorderBrush="#FA5A7D" 
                                            Margin="0,20,0,0" HorizontalAlignment="Left" Width="200"
                                            materialDesign:ButtonAssist.CornerRadius="10"/>
                                </StackPanel>

                                <materialDesign:PackIcon Grid.Column="1" Kind="AccountGroup" Width="100" Height="100" Opacity="0.2" Foreground="#FA5A7D" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Grid.Row="1" Style="{StaticResource SoftCard}" Margin="5,20,5,5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Danh sách bệnh nhân gần đây" FontWeight="Bold" Margin="10"/>
                                <DataGrid x:Name="gridPatients" AutoGenerateColumns="True" IsReadOnly="True" 
                                          HeadersVisibility="All" Background="White" BorderThickness="0"
                                          materialDesign:DataGridAssist.CellPadding="10"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </TabItem>

                <TabItem>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:Card Style="{StaticResource SoftCard}" Grid.Column="0" Margin="5" Padding="0">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Background="#EBF3FE" Padding="20" CornerRadius="20,20,0,0">
                                    <DockPanel>
                                        <materialDesign:PackIcon Kind="HumanQueue" VerticalAlignment="Center" Foreground="#5D87FF"/>
                                        <TextBlock Text="HÀNG ĐỢI KHÁM" FontWeight="Bold" Foreground="#5D87FF" Margin="10,0,0,0"/>
                                    </DockPanel>
                                </Border>
                                <ListBox x:Name="lstWaiting" SelectionChanged="LstWaiting_SelectionChanged" Padding="10"/>
                            </DockPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Style="{StaticResource SoftCard}" Grid.Column="1" Margin="20,5,5,5" Padding="30">
                            <StackPanel>
                                <TextBlock x:Name="lblDocCurrentPatient" Text="Chọn bệnh nhân để khám" FontSize="22" Foreground="#5D87FF" FontWeight="Bold"/>

                                <TextBox x:Name="txtDiagnosis" materialDesign:HintAssist.Hint="Chẩn đoán lâm sàng &amp; Triệu chứng" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="80" 
                                         TextWrapping="Wrap" Margin="0,20" VerticalScrollBarVisibility="Auto"
                                         materialDesign:TextFieldAssist.TextFieldCornerRadius="10"/>

                                <TextBlock Text="Kê đơn thuốc" FontWeight="Bold" Margin="0,10"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBox x:Name="txtSearchDrug" TextChanged="TxtSearchDrug_TextChanged" 
                                                 materialDesign:HintAssist.Hint="🔍 Tìm nhanh thuốc..." FontSize="12" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="cbDrugs" materialDesign:HintAssist.Hint="...hoặc chọn từ danh sách" 
                                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                                  DisplayMemberPath="Name" SelectedValuePath="Id" IsEditable="True"/>
                                    </StackPanel>

                                    <TextBox Grid.Column="1" x:Name="txtQty" materialDesign:HintAssist.Hint="SL" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="15,0"/>
                                    <Button Grid.Column="2" Content="Thêm" Click="BtnAddDrug_Click" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="10,0,0,0"/>
                                </Grid>

                                <DataGrid x:Name="gridPrescription" Height="180" AutoGenerateColumns="True" CanUserAddRows="False" Background="#F8F9FA"/>

                                <Button Content="HOÀN TẤT KHÁM" Click="BtnDoctor_Finish_Click" 
                                        Background="#5D87FF" BorderBrush="#5D87FF" 
                                        Margin="0,20,0,0" Height="45" materialDesign:ButtonAssist.CornerRadius="10"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </Grid>
                </TabItem>

                <TabItem>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="5">

                                <materialDesign:Card Style="{StaticResource SoftCard}" Padding="20" Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="1. TẠO NHÓM THUỐC" FontWeight="Bold" Foreground="#673AB7" Margin="0,0,0,10"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox Grid.Column="0" x:Name="txtNewCategory" 
                                                     materialDesign:HintAssist.Hint="Tên nhóm (VD: Kháng sinh)" 
                                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                                     Margin="0,0,15,0"
                                                     VerticalAlignment="Bottom"/>

                                        <Button Grid.Column="1" Content="TẠO" Click="BtnAddCategory_Click" 
                                                    Width="80" Height="32" 
                                                    Background="#673AB7" BorderBrush="#673AB7" 
                                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                                    materialDesign:ButtonAssist.CornerRadius="5"
                                                    VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                                        </Grid>
                                    </StackPanel>
                                </materialDesign:Card>

                                <materialDesign:Card Style="{StaticResource SoftCard}" Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="2. NHẬP THUỐC MỚI" FontWeight="Bold" Foreground="#009688" Margin="0,0,0,15" FontSize="16"/>

                                        <ComboBox x:Name="cbCategories" materialDesign:HintAssist.Hint="Chọn nhóm thuốc" 
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                                  DisplayMemberPath="Name" SelectedValuePath="Name" Margin="0,0,0,10"/>

                                        <TextBox x:Name="txtDrugName" materialDesign:HintAssist.Hint="Tên thuốc / Biệt dược" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,10"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" x:Name="txtDrugUnit" materialDesign:HintAssist.Hint="Đơn vị (Viên/Hộp)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,10,5,10"/>
                                            <TextBox Grid.Column="1" x:Name="txtDrugPrice" materialDesign:HintAssist.Hint="Đơn giá (VNĐ)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="5,10,0,10"/>
                                        </Grid>

                                        <Button Content="LƯU VÀO KHO" Click="BtnAddService_Click"
                                Background="#009688" BorderBrush="#009688" 
                                Margin="0,20,0,0" materialDesign:ButtonAssist.CornerRadius="10"/>
                                    </StackPanel>
                                </materialDesign:Card>
                            </StackPanel>
                        </ScrollViewer>

                        <materialDesign:Card Style="{StaticResource SoftCard}" Grid.Column="1" Margin="20,5,5,5" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <DockPanel Margin="10">
                                    <TextBlock Text="Danh mục thuốc hiện có" FontWeight="Bold" VerticalAlignment="Center" FontSize="16"/>
                                </DockPanel>

                                <DataGrid Grid.Row="1" x:Name="gridServiceList" AutoGenerateColumns="False" IsReadOnly="True" Background="White" CanUserAddRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                        <DataGridTextColumn Header="Nhóm thuốc" Binding="{Binding CategoryName}" FontWeight="Bold" Width="150"/>
                                        <DataGridTextColumn Header="Tên thuốc" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" Width="80"/>
                                        <DataGridTextColumn Header="Đơn giá" Binding="{Binding Price, StringFormat={}{0:N0} đ}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </TabItem>

                <TabItem>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:Card Style="{StaticResource SoftCard}" Grid.Column="0" Margin="5" Padding="0">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" Background="#E0F2F1" Padding="20" CornerRadius="20,20,0,0">
                                    <DockPanel>
                                        <materialDesign:PackIcon Kind="CashMultiple" VerticalAlignment="Center" Foreground="#009688"/>
                                        <TextBlock Text="CHỜ THANH TOÁN" FontWeight="Bold" Foreground="#009688" Margin="10,0,0,0"/>
                                    </DockPanel>
                                </Border>
                                <ListBox x:Name="lstCashier" SelectionChanged="LstCashier_SelectionChanged" Padding="10"/>
                            </DockPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Style="{StaticResource SoftCard}" Grid.Column="1" Margin="20,5,5,5" Padding="30">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock x:Name="lblBillInfo" Text="Thông tin hóa đơn" FontSize="22" FontWeight="Bold" Foreground="#2D3436"/>
                                    <Separator Margin="0,10"/>
                                </StackPanel>

                                <DataGrid Grid.Row="1" x:Name="gridBillDetails" AutoGenerateColumns="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Background="#FAFAFA"/>

                                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                                    <DockPanel LastChildFill="False">
                                        <TextBlock Text="TỔNG TIỀN PHẢI THU:" VerticalAlignment="Center" FontSize="16"/>
                                        <TextBlock x:Name="lblBillTotal" Text="0 đ" DockPanel.Dock="Right" FontSize="28" FontWeight="Bold" Foreground="#009688"/>
                                    </DockPanel>

                                    <Button Content="XÁC NHẬN THANH TOÁN" Click="BtnConfirmPay_Click" 
                                            Background="#009688" BorderBrush="#009688" 
                                            Height="50" Margin="0,15,0,0" materialDesign:ButtonAssist.CornerRadius="10" FontSize="16"/>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <Border Grid.Column="2" Background="White" Margin="15,0,0,0" CornerRadius="25,0,0,25" Padding="20">
            <StackPanel>
                <DockPanel Margin="0,0,0,30">
                    <TextBlock Text="Hồ sơ nhân viên" FontWeight="Bold" VerticalAlignment="Center"/>
                    <materialDesign:PackIcon Kind="Logout" DockPanel.Dock="Right" Foreground="#FA5A7D" Cursor="Hand"/>
                </DockPanel>

                <Ellipse Width="80" Height="80" Fill="#EBF1FE" HorizontalAlignment="Center"/>
                <materialDesign:PackIcon Kind="FaceManProfile" Width="50" Height="50" Foreground="#5D87FF" Margin="0,-65,0,0" HorizontalAlignment="Center"/>

                <TextBlock x:Name="lblCurrentUserName" Text="Admin User" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,25,0,5"/>
                <TextBlock x:Name="lblCurrentUserRole" Text="Quản lý hệ thống" Foreground="Gray" HorizontalAlignment="Center"/>

                <TextBlock Text="Thống kê hôm nay" FontWeight="Bold" Margin="0,40,0,15"/>

                <Border Background="#FFF5F7" CornerRadius="15" Padding="15" Margin="0,0,0,15">
                    <DockPanel>
                        <Border Background="#FFE2E5" Width="40" Height="40" CornerRadius="10">
                            <materialDesign:PackIcon Kind="AccountMultiple" Foreground="#FA5A7D" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Bệnh nhân" FontWeight="Bold" FontSize="12"/>
                            <TextBlock x:Name="lblStatPatient" Text="0 người" FontSize="14" FontWeight="Bold" Foreground="#2D3436"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <Border Background="#F4F9FF" CornerRadius="15" Padding="15" Margin="0,0,0,15">
                    <DockPanel>
                        <Border Background="#EBF3FE" Width="40" Height="40" CornerRadius="10">
                            <materialDesign:PackIcon Kind="Stethoscope" Foreground="#5D87FF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Đã khám" FontWeight="Bold" FontSize="12"/>
                            <TextBlock x:Name="lblStatExamined" Text="0 ca" FontSize="14" FontWeight="Bold" Foreground="#2D3436"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <Border Background="#E0F2F1" CornerRadius="15" Padding="15" Margin="0,0,0,15">
                    <DockPanel>
                        <Border Background="#B2DFDB" Width="40" Height="40" CornerRadius="10">
                            <materialDesign:PackIcon Kind="CashCheck" Foreground="#009688" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Doanh thu" FontWeight="Bold" FontSize="12"/>
                            <TextBlock x:Name="lblStatRevenue" Text="0 đ" FontSize="14" FontWeight="Bold" Foreground="#2D3436"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <Calendar Margin="0,20,0,0" Style="{StaticResource MaterialDesignCalendarPortrait}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>