<Window x:Class="HospitalManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Border CornerRadius="20" Background="#2D2D30" MouseLeftButtonDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                    Foreground="Gray" Click="BtnExit_Click" ToolTip="Thoát">
                <materialDesign:PackIcon Kind="Close" Width="25" Height="25"/>
            </Button>

            <StackPanel VerticalAlignment="Center" Margin="40,0">
                <materialDesign:PackIcon Kind="HospitalBuilding" Width="70" Height="70" 
                                         Foreground="#2196F3" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Welcome Back!" Foreground="White" FontSize="22" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Đăng nhập hệ thống quản lý" Foreground="#AAAAAA" FontSize="12" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBox x:Name="txtUsername"
                         materialDesign:HintAssist.Hint="Tên đăng nhập"
                         materialDesign:HintAssist.Foreground="#2196F3"
                         Foreground="White"
                         CaretBrush="White"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Margin="0,0,0,20"
                         FontSize="14"/>

                <PasswordBox x:Name="txtPassword"
                             materialDesign:HintAssist.Hint="Mật khẩu"
                             materialDesign:HintAssist.Foreground="#2196F3"
                             Foreground="White"
                             CaretBrush="White"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             Margin="0,0,0,30"
                             FontSize="14"/>

                <Button Content="ĐĂNG NHẬP" Click="BtnLogin_Click"
                        Height="45" FontSize="16" FontWeight="Bold"
                        Background="#2196F3" BorderThickness="0"
                        materialDesign:ButtonAssist.CornerRadius="22.5"
                        materialDesign:ElevationAssist.Elevation="Dp3"/>

                <TextBlock Text="Chưa có tài khoản? Liên hệ Admin" 
                           Foreground="#888888" Cursor="Hand"
                           HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="11"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>